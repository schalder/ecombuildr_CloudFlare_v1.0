# Cloudflare Pages build configuration
# Force npm to install optional dependencies correctly
include=optional
legacy-peer-deps=true
audit=false
fund=false
progress=false
# Ensure binaries are available in PATH
bin-links=true
# Force installation of platform-specific binaries
optional=true
# Prevent npm from skipping optional dependencies
engine-strict=false
# Ensure all dependencies are installed
production=false
# Force installation of native bindings for SWC and Rollup
target_platform=linux
target_arch=x64
target_libc=glibc
# Allow platform-specific binaries to be installed
force=true
