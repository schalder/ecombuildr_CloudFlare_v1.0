{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/seo?path=$1",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "facebookexternalhit"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/api/seo?path=$1",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "Twitterbot"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/api/seo?path=$1",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "LinkedInBot"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/api/seo?path=$1",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "WhatsApp"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/api/seo?path=$1",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "Googlebot"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
