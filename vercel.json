{
  "version": 2,
  "routes": [
    {
      "src": "^/api/seo-health$",
      "dest": "/api/render?health=1"
    },
    {
      "src": "^/(.*)$",
      "has": [
        {
          "type": "query",
          "key": "seo",
          "value": "1"
        }
      ],
      "dest": "/api/render?path=$1&force=1"
    },
    {
      "src": "^/(.*)$",
      "has": [
        {
          "type": "header",
          "key": "x-seo-test",
          "value": "1"
        }
      ],
      "dest": "/api/render?path=$1&force=1"
    },
    {
      "src": "^/(.*)$",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|Facebot|Twitterbot|LinkedInBot|WhatsApp|Googlebot|Bingbot|[Bb]ot|[Cc]rawler|[Ss]pider|DiscordBot|TelegramBot|Slackbot).*"
        }
      ],
      "dest": "/api/render?path=$1"
    },
    {
      "src": "^/api/(.*)$",
      "dest": "/api/$1"
    },
    {
      "src": "^/assets/(.*)$",
      "dest": "/assets/$1"
    },
    {
      "src": "^/.*\\.(ico|png|jpg|jpeg|svg|woff2|woff|ttf|eot|css|js|json|webp|gif|mp4|webm|pdf)$",
      "dest": "/$0"
    },
    {
      "src": "^/(.*)$",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.woff2)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Accept-Ranges",
          "value": "none"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
